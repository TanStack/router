{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "module": "ESNext",
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "allowJs": true
  },
  "include": ["src", "playwright.config.ts", "tests"],
  "exclude": ["node_modules", "dist"]
}
